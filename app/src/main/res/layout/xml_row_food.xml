<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_marginLeft="@dimen/image_marginLeft"
        android:id="@+id/imageFood"
        android:layout_width="@dimen/imageSize"
        android:layout_height="@dimen/imageSize" />

    <TextView
        android:layout_marginLeft="@dimen/name_Food_marginLeft"
        android:layout_toEndOf="@+id/imageFood"
        android:id="@+id/tvNameFood"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/name_Food_Height"
        android:layout_toLeftOf="@+id/imageFood"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/imageFood" />

    <TextView
        android:layout_marginLeft="@dimen/name_Food_marginLeft"
        android:layout_toEndOf="@+id/imageFood"
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/name_Food_Height"
        android:layout_below="@+id/tvNameFood"
        android:textColor="#0D6A97"
        android:textStyle="italic"
        android:layout_toRightOf="@+id/imageFood" />

    <TextView
        android:layout_marginLeft="@dimen/name_Food_marginLeft"
        android:layout_toEndOf="@+id/imageFood"
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/name_Food_Height"
        android:layout_below="@+id/tvAddress"
        android:textColor="#F00657"
        android:layout_toRightOf="@+id/imageFood"
        android:layout_toLeftOf="@+id/tvAddress" />
    <View
        android:layout_marginTop="5dp"
        android:layout_below="@+id/imageFood"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <CheckBox
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/checkFood"
        android:layout_width="@dimen/checkBoxSize"
        android:layout_height="@dimen/checkBoxSize" />
</RelativeLayout>